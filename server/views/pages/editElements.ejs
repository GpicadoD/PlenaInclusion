                finishDate: <input type="text" name="finishDate" value="" /><br><br>
                idPeriod: <input type="text" name="idPeriod" value="" /><br><br>
                idCreator: <input type="text" name="idCreator" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updateUser" method="post">
                <p>Editar Usuario</p>
                userNIF: <input type="text" name="userNIF" value="" /><br><br>
                name: <input type="text" name="name" value="" /><br><br>
                lastname: <input type="text" name="lastname" value="" /><br><br>
                email: <input type="text" name="email" value="" /><br><br>
                birthdate: <input type="text" name="birthdate" value="" /><br><br>
                phoneNumber: <input type="text" name="phoneNumber" value="" /><br><br>
                password: <input type="text" name="password" value="" /><br><br>
                gender: <input type="text" name="gender" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updateOrganizer" method="post">
