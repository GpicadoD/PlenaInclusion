                idImgOrg: <input type="text" name="idImgOrg" value="" /><br><br>
                idtypeProf: <input type="text" name="idtypeProf" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updateCompetitor" method="post">
                <p>Editar Participante</p>
                NifCom: <input type="text" name="NifCom" value="" /><br><br>
                emergencyNumber: <input type="text" name="emergencyNumber" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updateOrgType" method="post">
                <p>Editar Tipo de organizador</p>
                idTypeOrg: <input type="text" name="idTypeOrg" value="" /><br><br>
                orgType: <input type="text" name="orgType" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updateOrgType" method="post">
                <p>Editar Tipo de organizador</p>
                idTypeOrg: <input type="text" name="idTypeOrg" value="" /><br><br>
                orgType: <input type="text" name="orgType" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updatePublic" method="post">
                <p>Editar Tipo de Publico</p>
                idPublicType: <input type="text" name="idPublicType" value="" /><br><br>
                publicType: <input type="text" name="publicType" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>
            <form action="/updatePeriod" method="post">
                <p>Editar Periodos</p>
                idPeriod: <input type="text" name="idPeriod" value="" /><br><br>
                period: <input type="text" name="period" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>

            <form action="/updateTheme" method="post">
                <p>Editar Etiqueta</p>
                idTheme: <input type="text" name="idTheme" value="" /><br><br>
                themeName: <input type="text" name="themeName" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>

            <form action="/resetPassword" method="post">
                <p>Regenerar Contraseña</p>
                User Nif: <input type="text" name="newUserNif" value="" /><br><br>
                <input type="submit" value="Reset"/><br><br><hr>
            </form>
            
            <form action="/updatePassword" method="post">
                <p>Cambiar contraseña</p>
                UserNIF: <input type="text" name="newUserNif" value="" /><br><br>
                Actual UserPass: <input type="password" name="actualUserPass" value="" /><br><br>
                new UserPass: <input type="password" name="newUserPass" value="" /><br><br>
                Repeat new UserPass: <input type="password" name="repeat_newUserPass" value="" /><br><br>
                <input type="submit" value="Editar"/><br><br><hr>
            </form>

